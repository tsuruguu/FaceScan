<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.faceScan.controller.AttendanceController"
      spacing="10" style="-fx-padding: 20;">

    <Label fx:id="groupLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

    <HBox spacing="10">
        <DatePicker fx:id="datePicker"/>
        <Button fx:id="saveButton" text="Zapisz" onAction="#handleSaveAttendance"/>
    </HBox>

    <TableView fx:id="attendanceTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colStudentName" text="Student"/>
            <TableColumn fx:id="colDate" text="Data"/>
            <TableColumn fx:id="colPresent" text="Obecny"/>
        </columns>
    </TableView>

</VBox>
